<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.cqu.questionnaire.Activity8">

    <TextView
        android:text="How often do you play video games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="80dp"
        android:id="@+id/textView4" />




    <Button
        android:text="Choose one, please"
        android:enabled="false"
        android:layout_width="220dp"
        android:textColor="@color/deepwhite"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/btn8Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:id="@+id/rgFrequency"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="13dp" >

        <RadioButton
            android:text="Almost never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton21"
            android:layout_weight="1" />

        <RadioButton
            android:text="1-3 times a month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton20"
            android:layout_weight="1" />

        <RadioButton
            android:text="1-2 times a week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton19"
            android:layout_weight="1" />

        <RadioButton
            android:text="4-5 time a week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton18"
            android:layout_weight="1" />

        <RadioButton
            android:text="Everyday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton17"
            android:layout_weight="1" />
    </RadioGroup>
</RelativeLayout>
